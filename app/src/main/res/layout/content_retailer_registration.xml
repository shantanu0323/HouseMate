<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shantanu.housemate.RetailerRegistration"
    tools:showIn="@layout/activity_retailer_registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kitchen_background2"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutAnimation="@anim/list_animation"
                android:orientation="vertical"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailShopNameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">

                    <EditText
                        android:id="@+id/etRetailShopName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_name"
                        android:hint="Shop Name"
                        android:inputType="textPersonName"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailEmailLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">

                    <EditText
                        android:id="@+id/etRetailEmail"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_email"
                        android:hint="Email"
                        android:inputType="textEmailAddress"
                        android:textSize="18dp"
                        />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailPhoneLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">


                    <EditText
                        android:id="@+id/etRetailPhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_phone"
                        android:hint="Phone No."
                        android:inputType="phone"
                        android:maxLength="10"
                        android:textSize="18dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailAddressLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">


                    <EditText
                        android:id="@+id/etRetailAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_address"
                        android:hint="Address"
                        android:inputType="textMultiLine"
                        android:textSize="18dp"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/retailCityLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_et1"
                        android:elevation="4dp"
                        app:hintTextAppearance="@style/FloatingLabelTheme">

                        <EditText
                            android:id="@+id/etRetailCityLabel"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_city"
                            android:hint="City"
                            android:inputType="text"
                            android:textSize="18dp"
                            />
                    </android.support.design.widget.TextInputLayout>


                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/retailPincodeLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/custom_et1"
                        android:elevation="4dp"
                        app:hintTextAppearance="@style/FloatingLabelTheme">


                        <EditText
                            android:id="@+id/etRetailPincode"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_pincode"
                            android:hint="PIN Code"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textSize="18dp"
                            />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/radiusOfService"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/custom_et1"
                        android:elevation="4dp"
                        app:hintTextAppearance="@style/FloatingLabelTheme">

                        <EditText
                            android:id="@+id/etRadiusOfService"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_ros"
                            android:hint="Radius of Service"
                            android:inputType="number"
                            android:maxLength="3"
                            android:textSize="18dp"
                            />
                    </android.support.design.widget.TextInputLayout>

                    <ImageButton
                        android:id="@+id/bRadiusOfServiceInfo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/blank_btn"
                        android:elevation="4dp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:paddingTop="8dp"
                        android:shadowColor="#000000"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="5"
                        android:src="@drawable/info"/>
                </LinearLayout>


                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailUsernameLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">

                    <EditText
                        android:id="@+id/etRetailUsername"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_username"
                        android:hint="Username"
                        android:inputType="text"
                        android:textSize="18dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailPasswordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">


                    <EditText
                        android:id="@+id/etRetailPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_password"
                        android:fontFamily="sans-serif"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:textSize="18dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/retailCnfPasswordLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@drawable/custom_et1"
                    android:elevation="4dp"
                    app:hintTextAppearance="@style/FloatingLabelTheme">

                    <EditText
                        android:id="@+id/etRetailCnfPassword"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_password"
                        android:fontFamily="sans-serif"
                        android:hint="Confirm Password"
                        android:inputType="textPassword"
                        android:textSize="18dp"
                        />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/bRetailSubmit"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="240dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/custom_btn2"
                    android:drawableLeft="@drawable/submit_btn"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="20dp"
                    android:shadowColor="#000000"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="5"
                    android:text="  Submit"
                    android:textColor="#ffffff"
                    android:textSize="16dp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>
    </LinearLayout>

</LinearLayout>
