<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="shantanu.housemate.RegistrationPage"
    tools:showIn="@layout/app_bar_registration_page">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/kitchen_background2"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:weightSum="1">

        <Button
            android:id="@+id/bCustomer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:drawableTop="@drawable/customer_icon"
            android:background="@drawable/custom_btn3"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Customer"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/bRetailer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_btn3"
            android:drawableTop="@drawable/retailer_icon"
            android:gravity="center"
            android:padding="10dp"
            android:shadowColor="#000000"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="5"
            android:text="Retailer"
            android:textColor="#ffffff"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>
