<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke
                android:color="#ffffff"
                android:width="2dp" />
            <corners
                android:radius="30dp" />

            <gradient
                android:angle="90"
                android:startColor="#c8ff3737"
                android:endColor="#4beeefef"
                android:type="linear"
                android:gradientRadius="80dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke
                android:color="#ffffff"
                android:width="2dp" />
            <corners
                android:radius="30dp" />
            <gradient
                android:angle="90"
                android:startColor="#ff3737"
                android:endColor="#eeefef"
                android:type="linear"
                android:gradientRadius="80dp"/>

        </shape>
    </item>

</selector>